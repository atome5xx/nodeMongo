<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mon Profil</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
    <div class="profile-container">
        <h2 class="profile-name">
            <%= user.firstName %>
                <%= user.lastName %>
        </h2>

        <h3 class="section-title">Liste des emprunts</h3>
        <% if (user.emprunt && user.emprunt.length> 0) { %>
            <ul class="emprunt-list">
                <% user.emprunt.forEach(function(emprunt) { %>
                    <li class="emprunt-item">
                        <%= emprunt.name %> - Emprunté le <%= emprunt.debutEmprunt %>
                    </li>
                    <% }); %>
            </ul>
            <% } else { %>
                <p class="no-emprunt">Aucun emprunt en cours.</p>
                <% } %>

                    <% if (user.isAdmin) { %>
                        <div class="actions admin-actions">
                            <a href="/reservations/admin" class="action-link">Voir les demandes d'emprunts</a>
                            <a href="/admin/retours" class="action-link">Voir les retours</a>
                        </div>
                        <% } %>

                            <div class="actions user-actions">
                                <a href="/materiels/" class="action-link">Demande d'emprunt</a>
                                <a href="/users/edit/<%= user.id %>" class="action-link">Modifier le profil</a>
                                <a href="/auth/logout" class="action-link">Se déconnecter</a>
                            </div>
    </div>
</body>

</html>